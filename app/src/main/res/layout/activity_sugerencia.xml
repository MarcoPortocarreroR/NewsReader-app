<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.listanoticias.SugerenciaActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloSugerncia"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Sugerencias para mejorar \n nuestra aplicación" />

    <EditText
        android:id="@+id/sugerencia"
        android:layout_width="271dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Escribir aquí" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="" />

    <Button
        android:id="@+id/enviar"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_gravity="center"/>


</LinearLayout>
